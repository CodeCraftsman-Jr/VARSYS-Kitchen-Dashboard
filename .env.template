# Kitchen Dashboard v1.1.3 - Environment Configuration Template
# Copy this file to .env and fill in your Firebase configuration

# Firebase Configuration (Required for Firebase Login & Cloud Sync)
FIREBASE_API_KEY=your-api-key-here
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_DATABASE_URL=https://your-project-default-rtdb.firebaseio.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef123456
FIREBASE_MEASUREMENT_ID=G-ABCDEF123

# Application Settings
APP_VERSION=1.1.3
APP_NAME=Kitchen Dashboard
DEBUG_MODE=false

# Security Settings
SESSION_TIMEOUT_HOURS=24
IDLE_TIMEOUT_MINUTES=30
REQUIRE_AUTHENTICATION=true

# Sync Settings
AUTO_SYNC_ENABLED=true
SYNC_INTERVAL_MINUTES=5
BATCH_SIZE=100
MAX_RETRIES=3

# Feature Flags (ONLINE-ONLY MODE)
ENABLE_FIREBASE_AUTH=true
ENABLE_CLOUD_SYNC=true
ENABLE_REAL_TIME_SYNC=true
ENABLE_OFFLINE_SUPPORT=false
ENABLE_ANALYTICS=true
